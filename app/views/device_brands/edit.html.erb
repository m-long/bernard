<% provide(:title, "Edit #{@device_brand.name}") %>
<% provide(:form_url, device_brand_path(@device_brand)) %>
<% provide(:button_text, 'Save changes') %>

<h1>Update Remote <%= @device_brand.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <% if current_user && current_user.admin? %>
      <%= link_to "delete", @device_brand, method: :delete,
                    data: { confirm: "Delete remote #{@device_brand.name}?" } %>
    <% end %>
