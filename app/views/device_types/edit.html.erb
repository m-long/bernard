<% provide(:title, "Edit #{@device_type.name}") %>
<% provide(:form_url, device_type_path(@device_type)) %>
<% provide(:button_text, 'Save changes') %>

<h1>Update device type <%= @device_type.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <% if current_user && current_user.admin? %>
      <%= link_to "delete", @device_type, method: :delete,
                    data: { confirm: "Delete remote #{@device_type.name}?" } %>
    <% end %>
