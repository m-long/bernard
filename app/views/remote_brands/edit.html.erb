<% provide(:title, "Edit #{@remote_brand.name}") %>
<% provide(:form_url, remote_brands_path(@remote_brand)) %>
<% provide(:button_text, 'Save changes') %>

<h1>Update Remote <%= @remote_brand.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <% if current_user && current_user.admin? %>
      <%= link_to "delete", @remote_brand, method: :delete,
                    data: { confirm: "Delete remote #{@remote_brand.name}?" } %>
    <% end %>
