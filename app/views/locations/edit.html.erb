<% provide(:title, "Edit #{@location.name}") %>
<% provide(:form_url, user_location_path(@location)) %>
<% provide(:button_text, 'Save changes') %>

<h1>Update location <%= @location.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <% if current_user && current_user.admin? %>
      <%= link_to "delete", user_location_path(@location), method: :delete,
                    data: { confirm: "Delete remote #{@location.name}?" } %>
    <% end %>
