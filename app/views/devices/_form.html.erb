<%= form_for(@device, url: yield(:form_url)) do |f| %>
  <%= render 'shared/error_messages', object: @device %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <div class="form-group">
    <%= f.label :location_id, "Location", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :location_id, @locations.collect { |l| [ l.name, l.id ] }, { include_blank: false }, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :device_model_id, "Device Model", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :device_model_id, @device_models.collect { |d| [ d.model, d.id ] }, { include_blank: false }, { class: 'form-control' } %>
    </div>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
